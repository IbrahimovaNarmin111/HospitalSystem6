@using HospitalSystem2.Enums
@model Randevu
<div class="row">
    <div class="col-8">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Randevu yarat</h5>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">

                    
                    <div class="mb-3 form-group">
                        <label asp-for="Name" class="form-label">Ad</label>
                        <input asp-for="Name" type="text" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <label asp-for="Surname" class="form-label">Soyad</label>
                        <input asp-for="Surname" type="text" class="form-control" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <label asp-for="Description" class="form-label">Təsvir</label>
                        <input asp-for="Description" type="text" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" type="text" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <label asp-for="Contact" class="form-label">Əlaqə</label>
                        <input asp-for="Contact" type="text" class="form-control" />
                        <span asp-validation-for="Contact" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <label asp-for="BirthDate" class="form-label">Doğum Tarixi</label>
                        <input asp-for="BirthDate" value="@DateTime.Now"  class="btn-default datepicker" />
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3 form-group">
                        <label asp-for="RandevuDate" class="form-label">Randevu Tarixi</label>
                        <input asp-for="RandevuDate" value="@DateTime.Now" class="btn-default datepicker" />
                        <span asp-validation-for="RandevuDate" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Həkim seç</label>
                        <select class="form-control" name="doctorId">
                            @foreach (Doctor doctor in ViewBag.Doctors)
                            {
                                <option value="@doctor.Id">@doctor.Name @doctor.Surname</option>
                            }
                        </select>
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">Yarat</button>
                        <a asp-action="Index" class="btn btn-secondary">Geri Qayıt</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}
