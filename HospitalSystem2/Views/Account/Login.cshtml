@using HospitalSystem2.ViewModels;
@model LoginVM
@{
    Layout = null;
}
<style>
    .bg {
        /* The image used */
        background-image: url("../admin/backgroundimage/download2.jpg");
        /* Full height */
        height: 100%;
        /* Center and scale the image nicely */
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }
    

</style>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Xəstəxana Admin Panel</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="~/admin/img/360_F_514364850_xLOQX6SOY2qcjAIcTowsi3xYvHmhmvs0.jpg" type="image/png" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/admin/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/admin/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/admin/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/admin/css/style.css" rel="stylesheet">
</head>

<body>

    <div class="container- position-relative bg-white d-flex p-0 bg">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Sign In Start -->
        <div class="container-fluid">
            <div class="login-form">
                <form method="post">
                    <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
                        <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                            <div style="background-color:rgb(212 231 243 /58%) !important;" class="bg-light rounded p-4 p-sm-5 my-4 mx-3">
                                <div class="d-flex align-items-center justify-content-between mb-3">
                                    <a asp-controller="Account" asp-action="Login" class="">
                                        <h3 style="color:#4384ad !important;" class="text-primary"><i class="fas fa-hospital"></i>HOSPİTAL</h3>
                                    </a>

                                    <div asp-validation-summary="ModelOnly" style="color:red;margin-left:10px"></div>
                                </div>
                                <div style="margin-bottom: 20px;text-align-last: center">
                                    <h4 style="color:#4384ad;">Admin Panelə Daxil olun</h4>
                                </div>
                                <div style="margin-bottom:15px !important" class="form-floating mb-3">
                                    <input asp-for="Username" class="form-control" id="floatingText" placeholder="Username" style="margin-bottom:0px">
                                    <label for="Username">İstifadəçi adı</label>
                                    <span asp-validation-for="Username" style="color:red;margin-left:10px"></span>
                                </div>

                                <div style="margin-bottom:15px !important" class="form-floating mb-4">
                                    <input asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password" style="margin-bottom:0px">
                                    <label for="Password">Şifrə</label>
                                    <span asp-validation-for="Password" style="color:red;margin-left:10px"></span>
                                </div>
                                <div class="d-flex align-items-center justify-content-between mb-4">
                                    <div class="form-check">
                                        <input asp-for="IsRemember" class="form-check-input" id="exampleCheck1">
                                        <label style="color:#4384ad !important;font-size:18px" class="form-check-label" for="exampleCheck1"><strong>Yadda Saxla</strong></label>
                                    </div>
                                    <a style="color:#4384ad !important;font-size:18px" asp-action="ForgetPassword" asp-controller="Account"><strong>Şifrəni unutdun?</strong></a>
                                </div>
                                <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Daxil olun</button>

                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- Sign In End -->
    </div>
    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin/lib/chart/chart.min.js"></script>
    <script src="~/admin/lib/easing/easing.min.js"></script>
    <script src="~/admin/lib/waypoints/waypoints.min.js"></script>
    <script src="~/admin/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/admin/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/admin/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/admin/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/admin/js/main.js"></script>
</body>

</html>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}