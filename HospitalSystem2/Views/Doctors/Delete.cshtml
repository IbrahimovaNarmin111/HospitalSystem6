@model Doctor
<div style="margin-bottom:310px" class="row">
    <div class="col-8">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0 alert alert-danger"> @Model.Name doktoru silməkdən əminsiniz?</h5>

            </div>
            <div class="card-body">
                <form method="post">

                    <button type="submit" class="btn btn-danger">Sil</button>
                    <a asp-action="Index" class="btn btn-secondary">Geri qayıt</a>
                </form>
            </div>
        </div>
    </div>

</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

