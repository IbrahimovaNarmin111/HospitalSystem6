@using HospitalSystem2.Enums
@model Doctor
<div class="row">
    <div class="col-8">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Həkimi yenilə</h5>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">

                    <div class="mb-3 form-group">
                        <label asp-for="Photo" class="form-label">Şəkil</label>
                        <input asp-for="Photo" accept="image/*" class="form-control" />
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <label asp-for="Name" class="form-label">Ad</label>
                        <input asp-for="Name" type="text" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <label asp-for="Surname" class="form-label">Soyad</label>
                        <input asp-for="Surname" type="text" class="form-control" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <label asp-for="Description" class="form-label">Təsvir</label>
                        <input asp-for="Description" type="text" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" type="text" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <label asp-for="Contact" class="form-label">Əlaqə</label>
                        <input asp-for="Contact" type="text" class="form-control" />
                        <span asp-validation-for="Contact" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-group">
                        <label asp-for="Salary" class="form-label">Maaş</label>
                        <input asp-for="Salary" type="text" class="form-control" />
                        <span asp-validation-for="Salary" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Şöbə seç</label>
                        <select class="form-control" name="roomId">
                            @foreach (Room room in ViewBag.Rooms)
                                if (Model.RoomId == room.Id)
                                {
                                    <option selected value="@room.Id">@room.Name</option>
                                }
                                else
                                {
                                    <option value="@room.Id">@room.Name</option>
                                }

                            }


                        </select>
                    </div>
                    <div class="row mb-3">
                        <label>Qəbul günləri seç</label>
                        <select class="form-select" asp-for="ReceptionDayId" id="floatingSelect" aria-label="Floating label select example" asp-items="@(Html.GetEnumSelectList<Reception>())"></select>
                    </div>
                    <div class="row mb-3">
                        <label class="form-label">Qəbul günləri</label>
                        
                        @foreach (var reception in Model.Receptions)
                        {
                            @foreach (var day in Html.GetEnumSelectList<Reception>())
                            {
                                @if (reception.ReceptionDayId == int.Parse(day.Value))
                                {
                                    <div style="width:200px; margin-top:20px; position:relative">
                                        <li>
                                            @day.Text
                                            <span class="text-danger delete-image-button" style="font-size:16px;font-weight:bold;cursor:pointer;top:8px;right:20px;">X</span>
                                            <input type="hidden" name="ReceptionDayId" value="@reception.ReceptionDayId" />
                                        </li>
                                    </div>
                                }
                            }
                        }
                    </div>

                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">Yenilə</button>
                        <a asp-action="Index" class="btn btn-secondary">Geri Qayıt</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}



